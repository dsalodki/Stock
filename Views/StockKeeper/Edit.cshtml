@model Stock.Models.PurchaseInvoice

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>PurchaseInvoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BroughtId" class="control-label"></label>
                <input asp-for="BroughtId" class="form-control" />
                <span asp-validation-for="BroughtId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="When" class="control-label"></label>
                <input asp-for="When" class="form-control" />
                <span asp-validation-for="When" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippedId" class="control-label"></label>
                <select asp-for="ShippedId" asp-items="ViewBag.Loaders"></select>
                <span asp-validation-for="ShippedId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckedId" class="control-label">@ViewBag.StoreKeeper.Email</label>
                <input asp-for="CheckedId" class="form-control" value="@ViewBag.StoreKeeper.Id" readonly="readonly" />
                <span asp-validation-for="CheckedId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsOnStock" /> @Html.DisplayNameFor(model => model.IsOnStock)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

